<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/gamescreen">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamescreen_equation" android:layout_gravity="center" android:textSize="24dip"
                android:background="@android:color/transparent" style="@android:style/TextAppearance.Large"
                android:paddingTop="25dip"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:gravity="center|bottom" android:layout_weight="1"
            >
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamescreen_ansone" android:layout_gravity="bottom"
                    android:background="@android:color/transparent" android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamescreen_anstwo" android:layout_gravity="bottom"
                    android:background="@android:color/transparent" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center" android:paddingTop="15dip"
                android:paddingBottom="15dip">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamescreen_ansthree" android:background="@android:color/transparent"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamescreen_ansfour" android:background="@android:color/transparent"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="2">
        <ProgressBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gamescreen_progbar"
                android:indeterminate="false"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="0"
                android:secondaryProgress="0"
                android:layout_span="2"/>
    </LinearLayout>
</LinearLayout>