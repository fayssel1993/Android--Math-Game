<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/gamescreen">

    <TextView style="@android:style/TextAppearance.Large" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/info_title" android:singleLine="false"
              android:background="@android:color/transparent" android:text="@string/info_title"
              android:layout_alignRight="@+id/info_content" android:layout_alignParentTop="true"
              android:layout_marginTop="33dp" android:layout_gravity="center" android:gravity="center"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/info_content" android:id="@+id/info_content"
              android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
              android:layout_marginTop="95dp" android:layout_gravity="center" android:layout_marginBottom="75dp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView"
               android:background="@drawable/apple" android:layout_gravity="center"/>
</LinearLayout>